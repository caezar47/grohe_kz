<mj-section mj-class="pad--0">
    <mj-column mj-class="pad--0">
        <mj-button mj-class="product-review__heading"
                   href="#">
            Рюкзак для инструмента с&nbsp;колесами FatMax нейлоновый STANLEY 1-79-215, 36×27×46&nbsp;см
        </mj-button>
    </mj-column>
</mj-section>
<mj-wrapper mj-class="product-review__wrapper">
    <mj-section mj-class="product-review">
        <mj-column mj-class="product-review__inner">
            <mj-section mj-class="product-review__card">
                <mj-column mj-class="product-review__card-column-left" css-class="dib product-review__card-column-left">
                    <mj-image mj-class="product-review__card-img"
