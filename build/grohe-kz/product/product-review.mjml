                                        <mj-text mj-class="reviews__adv-title">Функции:</mj-text>
                                        <mj-image mj-class="reviews__adv-img"
                                                  src="https://stanley.masterclub.store/media/up/stanley/email/theme/rate-5-star.png"/>
                                    </mj-column>
                                    <mj-column mj-class="reviews__adv" css-class="dib mw-100">
                                        <mj-text mj-class="reviews__adv-title">Удобство:</mj-text>
                                        <mj-image mj-class="reviews__adv-img"
                                                  src="https://stanley.masterclub.store/media/up/stanley/email/theme/rate-5-star.png"/>
                                    </mj-column>
                                    <mj-column mj-class="reviews__adv" css-class="dib  mw-100">
                                        <mj-text mj-class="reviews__adv-title">Дизайн:</mj-text>
