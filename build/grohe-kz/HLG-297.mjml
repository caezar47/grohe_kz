                      padding="7.5px"
                      width="200px"
            />
            <mj-class name="main__product-img"
                      padding="0"
                      width="185px"
            />
            <mj-class name="footer__padding"
                      full-width="full-width"
                      background-color="#000"
            />
            <mj-class name="footer"
            />
