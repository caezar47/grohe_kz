                        <section class="main-banner">
                            <picture>
                                <source type="image/jpeg" srcset="{{ path.img }}{{ img.quickfix }}/main-banner-320.jpg" media="(max-width: 767px)">
                                <source type="image/jpeg" srcset="{{ path.img }}{{ img.quickfix }}/main-banner-768.jpg" media="(max-width: 1023px)">
